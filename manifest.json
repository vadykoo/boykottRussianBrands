{
  "manifest_version": 3,
  "name": "Ukrainian and Russian Brands Marker",
  "version": "1.1",
  "description": "Mark Ukrainian brands with a Ukrainian flag emoji and Russian brands with a skull emoji.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "type": "module"
    }
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
